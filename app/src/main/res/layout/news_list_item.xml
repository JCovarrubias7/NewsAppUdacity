<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingEnd="16dp"
    android:paddingRight="16dp">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/textColorArticleTitle"
            android:textSize="14sp"
            tools:text="This is going to be the articles title that will not exceed 2 lines" />

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_title"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/textColorArticleDetails"
            android:textSize="12sp"
            tools:text="John Wayne (The name of the author)" />

        <TextView
            android:id="@+id/section_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_title"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:gravity="end"
            android:textColor="@color/textColorArticleDetails"
            android:textSize="12sp"
            tools:text="NFL" />

    </RelativeLayout>

    <TextView
        android:id="@+id/article_published_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:textColor="@color/textColorArticleDetails"
        android:textSize="12sp"
        tools:text="Mar 6, 2010" />


</LinearLayout>